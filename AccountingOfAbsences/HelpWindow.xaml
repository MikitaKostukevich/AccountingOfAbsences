<Window x:Class="AccountingOfAbsences.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Справка" Height="400" Width="600">
    <Grid>
        <!-- Заголовок инструкции -->
        <TextBlock Text="Инструкция по использованию программы" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- Содержимое инструкции -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,50,10,10">
            <TextBlock TextWrapping="Wrap">
                <Run Text="1. Для создания отчета по ученику, нажмите на кнопку 'Отчет по ученику'..." /><LineBreak />
                <Run Text="2. Для создания статистического отчета, нажмите на кнопку 'Статистический отчет'..." /><LineBreak />
                <Run Text="3. Для создания ведомости пропусков, нажмите на кнопку 'Ведомость пропусков'..." /><LineBreak />
                <Run Text="4. Для создания аналитического отчета, нажмите на кнопку 'Аналитический отчет'..." /><LineBreak />
                <LineBreak />
                <Run Text="Примечание: Используйте эти отчеты для анализа статистики по отсутствиям учеников."/>
            </TextBlock>
        </ScrollViewer>

        <!-- Кнопка закрытия окна -->
        <Button Content="Закрыть" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,0,20" Click="CloseHelpWindow"/>
    </Grid>
</Window>
